#!/usr/bin/bash

x_usage() {
    local cmds="${COMMANDS[@]}"
    printf "usage: ${0##*/} (${cmds// /|})\n"
}

x_away() {
    _filter "$@"
    local message="$*"
    [[ -z "$message" ]] && message=$(now)
    away="🐟 $message"
    t "$away" 2>/dev/null
    pomo stop
    exec tmux -L live resize-pane -Z &
    fishies 
}

x_quiet() {
    _filter "$@"
    local message="$*"
    [[ -z "$message" ]] && read -r message -p "Message: "
    t "🔇 $message" 2>/dev/null
}

x_talking() {
    _filter "$@"
    local message="$*"
    [[ -z "$message" ]] && read -r message -p "Message: "
    t "☕ $message" 2>/dev/null
}

x_live() {
    _filter "$@"
    local message="$*"
    [[ -z "$message" ]] && read -r message -p "Message: "
    t "🔴 $message" 2>/dev/null
}

x_recording() {
    _filter "$@"
    local message="$*"
    [[ -z "$message" ]] && read -r message -p "Message: "
    t "🎬 $message" 2>/dev/null
}

x_mklinks() {
    ln -s $(command -v "$EXE") away
    ln -s $(command -v "$EXE") quiet
    ln -s $(command -v "$EXE") talking
    ln -s $(command -v "$EXE") live
    ln -s $(command -v "$EXE") recording
}

# --------------------- completion and delegation --------------------

_filter(){
  (( $# > 0 )) && return 0
  while IFS= read -ra args; do
    "${FUNCNAME[1]}" "${args[@]}"
  done
}

while IFS= read -r line; do
    [[ $line =~ ^declare\ -f\ x_ ]] || continue
    COMMANDS+=( "${line##declare -f x_}" )
done < <(declare -F)

if [[ -n $COMP_LINE ]]; then
    line=${COMP_LINE#* }
    for c in "${COMMANDS[@]}"; do
        [[ ${c:0:${#line}} == "${line,,}" ]] && echo "$c"
    done
    exit
fi

EXE="${0##*/}"
for c in "${COMMANDS[@]}"; do
    if [[ $c == "$EXE" ]]; then
        "x_$EXE" "$@"
        exit $?
    fi
done

CMD="$1"; shift
for c in "${COMMANDS[@]}"; do
    if [[ $c == "$CMD" ]]; then
        "x_$CMD" "$@"
        exit $?
    fi
done

x_usage "$@"

